{
    "require": {
        "slim/slim": "^4.7",
        "laminas/laminas-diactoros": "^2.5",
        "php-di/php-di": "^6.3",
        "doctrine/orm": "^2.8",
        "symfony/console": "^5.2",
        "twig/twig": "^3.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\": "tests/"
        }
    },
    "scripts": {
        "console": "php bin/app.php --ansi",
        "test": "php vendor/bin/phpunit --colors=always"
    }
}
